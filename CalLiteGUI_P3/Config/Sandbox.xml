
<!-- This is the main panel for the Sandbox. It is visible, and uses the GridBagLayout layout manager -->

<panel id="sandbox" name="sandbox" visible="true" layout="GridBagLayout">

   
	<panel font="Tahoma-Bold-12" layout="GridBagLayout">
	
	    <!-- The following subpanel demonstrates the Enable/Disable dynamic control capabilities -->
        <!-- The subpanel also uses the GridBagLayout manager, and places the subpanel at coordinate 0,0 of the parent's grid -->
        
		<panel resizeable="false" layout="GridBagLayout"
			border="TitledBorder(For Enable/Disable)">
			<gridbagconstraints insets="0,0,2,2"
				anchor="GridBagConstraints.WEST" gridx="0" gridy="0" />
				
			<!-- Placing radiobuttons in a buttongroup gurantees that only one of the buttons can be selected at a time -->
			
			<buttongroup>
			
			    <!-- The buttons are placed inside the subpanel's grid at coordinates (0.5,0) and (0.5,1) -->
			    <!-- Insets are used to specify padding inside the grid area -->
			    <!-- The anchor value of WEST centers the component vertically and left-justifies it horizontally -->
			    
				<radiobutton id="ep_db" name="ep_db"
					text="Enable Panel 1 and disable the Help button" minimumsize="240,20"
					selected="false">
					<gridbagconstraints insets="0,0,5,5"
						anchor="GridBagConstraints.WEST" gridx="0.5" gridy="0" />
							
				</radiobutton>
				<radiobutton id="dp_eb" name="dp_eb"
					text="Disable Panel 1 and enable the Help button" minimumsize="240,20">
					<gridbagconstraints insets="0,0,5,5"
						anchor="GridBagConstraints.WEST" gridx="0.5" gridy="1" />
				</radiobutton>
			</buttongroup>
			
			
		<!-- The next panel is at coordinate (0,1) of the parent's grid -->
			
		</panel>
		<panel resizeable="false" layout="GridBagLayout"
			border="TitledBorder(For visible/invisible)">
			<gridbagconstraints insets="0,0,2,2"
				anchor="GridBagConstraints.WEST" gridx="0" gridy="1" />
			<buttongroup>
				<radiobutton id="vp" name="vp" text="Turn on Panel 2"
					minimumsize="240,20" selected="false">
					<gridbagconstraints insets="0,0,5,5"
						anchor="GridBagConstraints.WEST" gridx="0.5" gridy="0" />
				</radiobutton>
				<radiobutton id="ip" name="ip" text="Turn off Panel 2"
					minimumsize="240,20">
					<gridbagconstraints insets="0,0,5,5"
						anchor="GridBagConstraints.WEST" gridx="0.5" gridy="1" />
				</radiobutton>
			</buttongroup>
		</panel>
		
		
		<!-- This panel is at coordinate (0,3) -->
		
		<panel resizeable="false" layout="GridBagLayout"
			border="TitledBorder(For Select/Un-select)">
			<gridbagconstraints insets="0,0,3,3"
				anchor="GridBagConstraints.WEST" gridx="0" gridy="2" />
			<buttongroup>
				<radiobutton id="sq1_uq2" name="sq1_uq2"
					text="Select Q1 and Un-select Q2" minimumsize="240,20" selected="false">
					<gridbagconstraints insets="0,0,5,5"
						anchor="GridBagConstraints.WEST" gridx="0.5" gridy="0" />
				</radiobutton>
				<radiobutton id="uq1_sq2" name="uq1_sq2"
					text="Un-select Q1 and Select Q2" minimumsize="240,20">
					<gridbagconstraints insets="0,0,5,5"
						anchor="GridBagConstraints.WEST" gridx="0.5" gridy="1" />
				</radiobutton>
			</buttongroup>
			<!-- <checkbox name="table_display" id="table_display" text="Display Table." -->
			<!-- enabled="true"> -->
			<!-- <gridbagconstraints insets="0,0,5,5" -->
			<!-- anchor="GridBagConstraints.WEST" gridx="0" gridy="2" /> -->
			<!-- </checkbox> -->
		</panel>
		
		<!-- panel1 and panel2 contain some controls to be affected by the dynamic controls in the left-hand panels -->
		<!-- These panels are at locations (1,0) and (1,1) -->
		
		<panel id="panel1" name="panel1" enabled="false" layout="GridBagLayout"
			border="TitledBorder(panel 1)">
			<gridbagconstraints insets="0,0,5,5"
				anchor="GridBagConstraints.NORTHWEST" gridx="1" gridy="0"
				gridheight="3" />
			<panel layout="GridBagLayout" font="Tahoma-Italic">
				<gridbagconstraints insets="0,5,5,5"
					anchor="GridBagConstraints.WEST" gridx="0" gridy="2" gridwidth="2" />
				<buttongroup>
					<radiobutton name="dy_ckb1" id="dy_ckb1" text="Radio button"
						enabled="false">
						<gridbagconstraints insets="0,0,5,5"
							anchor="GridBagConstraints.WEST" gridx="0" gridy="0" />
					</radiobutton>
					<radiobutton text="Radio button" enabled="false">
						<gridbagconstraints insets="0,0,5,5"
							anchor="GridBagConstraints.WEST" gridx="0" gridy="1" />
					</radiobutton>
				</buttongroup>
			</panel>
		</panel>
		<panel id="panel2" name="panel2" enabled="true" visible="false"
			layout="GridBagLayout" border="TitledBorder(panel 2)">
			<gridbagconstraints insets="0,0,5,5"
				anchor="GridBagConstraints.NORTHWEST" gridx="1" gridy="1"
				gridheight="3" />
			<panel layout="GridBagLayout" font="Tahoma-Italic">
				<gridbagconstraints insets="0,5,5,5"
					anchor="GridBagConstraints.WEST" gridx="0" gridy="2" gridwidth="2" />
				<buttongroup>
					<radiobutton name="dy_ckb2" id="dy_ckb2" text="Radio button"
						enabled="true">
						<gridbagconstraints insets="0,0,5,5"
							anchor="GridBagConstraints.WEST" gridx="0" gridy="0" />
					</radiobutton>
				</buttongroup>
			</panel>
		</panel>
		<panel enabled="true" layout="GridBagLayout" border="TitledBorder(panel 3)">
			<gridbagconstraints insets="0,0,5,5"
				anchor="GridBagConstraints.NORTHWEST" gridx="1" gridy="2"
				gridheight="3" />
			<panel layout="GridBagLayout" font="Tahoma-Italic">
				<gridbagconstraints insets="0,5,5,5"
					anchor="GridBagConstraints.WEST" gridx="0" gridy="2" gridwidth="2" />
				<checkbox name="dy_ckb3" id="dy_ckb3" text="Q1 Check Box"
					enabled="true">
					<gridbagconstraints insets="0,0,5,5"
						anchor="GridBagConstraints.WEST" gridx="0" gridy="0" />
				</checkbox>
				<checkbox name="dy_ckb4" id="dy_ckb4" text="Q2 Check Box"
					enabled="true">
					<gridbagconstraints insets="0,0,5,5"
						anchor="GridBagConstraints.WEST" gridx="0" gridy="1" />
				</checkbox>
			</panel>
		</panel>
		<panel border="TitledBorder(Table)" visible="true" layout="GridBagLayout">
			<gridbagconstraints insets="0,0,5,5"
				anchor="GridBagConstraints.NORTHWEST" gridx="1" gridy="3" />
			<scrollpane preferredsize="300,300">
				<gridbagconstraints insets="0,0,5,5"
					anchor="GridBagConstraints.NORTHWEST" gridx="0" gridy="0" />
				<table  id="testTable_dynamic" name="testTable_dynamic">
				</table>
			</scrollpane>
		</panel>
		<button text="Help" id="dy_help" name="dy_help">
			<gridbagconstraints anchor="GridBagConstraints.WEST"
				gridx="0" gridy="99" gridwidth="2" insets="5,5,5,0" />
		</button>
		<label text="This is a Test place where user can add records and play with the application."
					font="Tahoma-BOLD-13" foreground="CC3333" >
					<gridbagconstraints insets="0,0,5,5" gridx="0"
				gridy="90" anchor="GridBagConstraints.NORTHWEST" />
				</label>
	</panel>
</panel>